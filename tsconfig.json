{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@api": [
        "./src/api"
      ],
      "@data": [
        "./src/data"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@schemas": [
        "./src/schemas"
      ],
      "@types": [
        "src/interfaces"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@handlers": [
        "./src/handlers"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
    }
  }
}